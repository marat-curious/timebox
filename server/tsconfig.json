{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "types": [
      "koa",
      "koa-router",
      "node",
      "pg"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}
